extends layout/main.pug

block style 
    link(rel="stylesheet", href="/css/shop.css")

block content
    h1 Shop
    .product-list
        if products && products.length
            .grid
                each product in products
                    .card
                        img(src='https://images.unsplash.com/photo-1468971050039-be99497410af?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2532&q=80' alt='Denim Jeans' style='width:100%')
                        h1 #{product.title}
                        p.price $19.99
                        p Some text about the jeans..
                        p
                            button Add to Cart

        else
            h2 No product found.