extends ../layout/main.pug

block style
    link(rel="stylesheet", href="/css/form.css")

block content
    h1= (editMode) ? 'Edit product' : 'Add product'
    .form-wrapper
        form(action=(editMode ? `/admin/edit-product` : '/admin/add-product'), method="POST", class="add-product")
            label(for='product-title') Product title
            input#product-title(
                type='text'
                required
                name='title'
                autocomplete='off'
                value=(editMode ? product.title : '')
            )

            label(for='product-imageUrl') Product image URL
            input#product-imageUrl(
                type='text' 
                required 
                name='imageUrl' 
                autocomplete='off' 
                value=(editMode ? product.imageUrl : '')
            )

            label(for='product-description') Product description
            input#product-description(
                type='text' 
                name='description' 
                autocomplete='off' 
                value=(editMode ? product.description : '')
            )

            label(for='product-price') Product price
            input#product-price(
                type='number' 
                step='0.01' 
                required 
                name='price' 
                autocomplete='off' 
                value=(editMode ? product.price : '')
            )

            if editMode
                input(type="hidden" name="productId" value=product._id)
            button(type='submit')= (editMode) ? 'Update' : 'Add'
